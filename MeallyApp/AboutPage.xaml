<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeallyApp.AboutPage">

    <Shell.TitleView>
        <Label Text="About" FontFamily="OpenSansSemibold" VerticalOptions="CenterAndExpand" HorizontalOptions="Start" TextColor="#231F20" FontSize="20"  Margin="0,0,0,2"/>
    </Shell.TitleView>

    <VerticalStackLayout Spacing="20" VerticalOptions="Center">
        <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">

            <Label TextColor="Black" FontSize="22" FontAttributes="Bold" Text="Meally"/>
            <Label TextColor="#231F20" FontSize="22" Text="v0.1 pre-alpha"/>

        </HorizontalStackLayout>


        <Label TextColor="#231F20" FontSize="15" Text="To learn more about the project and track its progress press the button below" HorizontalOptions="Center" HorizontalTextAlignment="Center" Margin="10"/>

        <Button Text="Learn more..." Clicked="LearnMore_Clicked" CornerRadius="10" TextColor="#231F20" BackgroundColor="#FFC439" Margin="100,0,100,0"/>

    </VerticalStackLayout>

</ContentPage>