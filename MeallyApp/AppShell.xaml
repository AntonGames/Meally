<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MeallyApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MeallyApp"
    Shell.TabBarIsVisible="False"
    Shell.BackgroundColor="#FAF9F7"
    FlyoutBackgroundColor="#FFC439"
    Shell.ForegroundColor="#231F20"
    Shell.TitleColor="#231F20">

    <Shell.FlyoutHeader>
        <Label Text="Meally" FontSize="50" HorizontalOptions="Center" VerticalOptions="Center" Margin="0,25,0,25"/>
    </Shell.FlyoutHeader>
    
    <ShellContent
            Title="Main"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />

    <ShellContent
        Title="Recipes"
        ContentTemplate="{DataTemplate local:FilterPage}"
        Route="FilterPage" />

    <ShellContent
        Title="About"
        ContentTemplate="{DataTemplate local:AboutPage}"
        Route="AboutPage" />

</Shell>
