<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeallyApp.FilterPage"
             Title="Recipes">

    <Grid Padding="20,20,20,20"
          RowDefinitions="150,100">

        <Frame BackgroundColor="#F5F5F5" HeightRequest="150" Grid.ColumnSpan="2" Grid.Row="0">
            <Label x:Name="TempText" TextColor="Black" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
        </Frame>

        <Button x:Name="AddButton"
                Grid.Row="1"
                HeightRequest="50"
                Text="Load from file..." TextColor="#231F20" 
                CornerRadius="10" 
                BackgroundColor="#FFC439" 
                Clicked="RecipeButton_OnClicked"/>

    </Grid>

</ContentPage>