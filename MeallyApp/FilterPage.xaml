<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeallyApp.FilterPage"
             Title="Recipes">

    <Grid Padding="20,0,20,0"
          RowDefinitions="100,150"
          RowSpacing="0">

        <Button Grid.Row="0"
                HeightRequest="50"
                Text="Load from file..." TextColor="#231F20" 
                CornerRadius="10" 
                BackgroundColor="#FFC439" 
                Clicked="RecipeButton_OnClicked"/>




        <!-- Template for CollectionView of Recipes -->
        <Frame CornerRadius="10"
               Grid.Row="1"
               HeightRequest="150"
               WidthRequest="350">

            <Grid HeightRequest="150" 
                  WidthRequest="350"
                  ColumnDefinitions="150,150,*"
                  RowDefinitions="50,70,20,*"
                  RowSpacing="0">

                <Frame CornerRadius="10" HeightRequest="120" WidthRequest="125" BackgroundColor="Black" Grid.Column="0" Grid.RowSpan="4">
                    <Image Source="placeholder.png" HeightRequest="125" WidthRequest="125"/>
                </Frame>


                <Label Grid.Column="1" Grid.Row="0" TextColor="Black" Text="Lasagna" Margin="0,12,0,0" FontAttributes="Bold" FontSize="25"/>

                <Label Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed at sem a odio malesuada maximus. Praesent in aliquam arcu, vitae feugiat neque. Phasellus dignissim auctor fermentum. Nam ut diam condimentum elit laoreet sollicitudin. Integer interdum vestibulum sapien. Mauris felis dui, lobortis at arcu nec, lacinia ultrices leo. Aenean sit amet vulputate massa. Aliquam sed nulla a erat tincidunt tincidunt."
                       Grid.Row="1"
                       Grid.Column="1"
                       Grid.ColumnSpan="2"
                       Grid.RowSpan="2"
                       Margin="0,0,20,20"
                       TextColor="Black"
                />

                <Label TextColor="Black" Text="90%" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Margin="0,0,0,0"/>
            </Grid>
        </Frame>
        <!-- Template end -->




    </Grid>

</ContentPage>